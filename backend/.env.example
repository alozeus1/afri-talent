# ============================================
# AfriTalent Backend Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# Local: postgresql://postgres:postgres@localhost:5432/afritalent
# Staging: Use managed PostgreSQL URL (Railway/Supabase)
# Production: Use managed PostgreSQL URL with SSL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/afritalent"

# --------------------------------------------
# Authentication
# --------------------------------------------
# CRITICAL: Generate a strong secret for production
# Use: openssl rand -base64 64
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# JWT expiration time (default: 7d)
JWT_EXPIRES_IN="7d"

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Local: http://localhost:3000
# Staging: https://staging.afritalent.example.com
# Production: https://afritalent.example.com
FRONTEND_URL="http://localhost:3000"

# --------------------------------------------
# Server Configuration
# --------------------------------------------
PORT=4000
NODE_ENV="development"

# --------------------------------------------
# Rate Limiting (optional, defaults shown)
# --------------------------------------------
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# Logging
# --------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL="info"

# --------------------------------------------
# Error Tracking (optional)
# --------------------------------------------
# Sentry DSN - uncomment and set to enable
# SENTRY_DSN="https://xxx@sentry.io/xxx"
